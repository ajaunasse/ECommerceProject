{% for category in categories %}
        {%  if  param.category is defined  and param.category == category.id  %}
                <a class="list-group-item active" href="{{ path('_category', {'category':category.id }) }}"> {{ category.name }}</a>
        {% else %}
                <a class="list-group-item" href="{{ path('_category', {'category':category.id }) }}"> {{ category.name }}</a>
        {% endif %}
{% endfor %}