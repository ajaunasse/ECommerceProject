{% extends ":layout:Public/layout.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="span3">
                {% include ":layout:Public/modules/navigation.html.twig" %}
            </div>
            <div class="span9">
                {% for flash_message in app.session.flashBag.get('danger') %}
                    <div class="alert alert-danger">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                <h2>Votre parnier</h2>
                {% if products|length > 0 %}
                    <table class="table table-striped table-hover">
                        <thead>

                        <tr>
                            <th>Références</th>
                            <th>Nom</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total HT</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                                <tr>
                                    <form id="{{ product.id }}" action="{{ path('_add', {'id': product.id}) }}" method="get">
                                    <td>{{ product.reference }}</td>
                                    <td>{{ product.name }}</td>
                                    <td>

                                            <select name="qte" class="span1" onChange="this.form.submit()">
                                                {% for i in 1..10 %}
                                                    <option value="{{ i }}"
                                                            {% if i == cart[product.id] %}
                                                                selected
                                                            {% elseif cart[product.id] > 10 %}
                                                                {% if i == 10 %}
                                                                    selected
                                                                {% endif %}
                                                            {% endif %}
                                                    >
                                                        {{ i }}
                                                    </option>
                                                {% endfor %}
                                            </select>

                                        <a href="{{ path('_delete', {'id':product.id }) }}"><i class="icon-trash"></i></a>
                                    </td>
                                    <td>{{ product.price }}€</td>
                                    <td>{{ product.price * cart[product.id] }} €</td>
                                    </form>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <dl class="dl-horizontal pull-right">
                        <dt>Total HT :</dt>
                        <dd>799,99€</dd>

                        <dt>TVA :</dt>
                        <dd>200€</dd>

                        <dt>Total:</dt>
                        <dd>999,99€</dd>
                    </dl>
                    <div class="clearfix"></div>
                        <a href="{{ path('_delivery') }}" class="btn btn-success pull-right">Valider mon panier</a>
                        <a href="index.php" class="btn btn-primary">Continuer mes achats</a>
                     </div>
            {% else %}
                <div class="alert alert-danger">
                    Aucun article(s) dans le panier
                </div>
            {% endif %}
            <div class="clearfix"></div>
            <a href="{{ path('_homepage') }}" class="btn btn-primary">Continuer mes achats</a>
        </div>
    </div>
{% endblock %}