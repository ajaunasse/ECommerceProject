<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}My E-Commerce!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/admin/style_admin.css') }}">
        <link rel="stylesheet" href="{{ asset('css/admin/forms.css') }}">
        <link rel="stylesheet" href="{{ asset('css/admin/stats.css') }}">
        <link rel="stylesheet" href="{{ asset('css/admin/buttons.css') }}">
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
    {% block font %}
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block header %}
    {% include ":layout:Admin/header_admin.html.twig" %}
{% endblock %}
    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                {% block navbarleft %}
                    {% include ":layout:Admin/modules/navbar_left.html.twig" %}
                {% endblock %}
            </div>
            <div class="col-md-10">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>


    {% block javascripts %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="{{ asset('js/script_admin.js') }}"></script>

    {% endblock %}
</body>
</html>
